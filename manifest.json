{
    "manifest_version": 3,
    "name": "BlueBeGone",
    "version": "1.0.0",
    "description": "Hides the useless \"Twitter Blue\" and \"Verified Organizations\" sidebar links.",
    "permissions": [
        "storage",
        "activeTab",
        "tabs"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "assets/icon16.png",
            "48": "assets/icon48.png",
            "128": "assets/icon128.png"
        }
    },
    "icons": {
        "16": "assets/icon16.png",
        "48": "assets/icon48.png",
        "128": "assets/icon128.png"
    },
    "content_scripts": [
        {
            "matches": ["*://twitter.com/*", "*://x.com/*"],
            "js": [
                "scripts/targets.js",
                "scripts/content.js"
            ],
            "run_at": "document_end"
        }
    ]
}